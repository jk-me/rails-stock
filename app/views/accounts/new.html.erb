<div class='center'>

  <div class='register'>
    <p class='page-title'>Create an Account</p>


    <%= form_for @account do |f| %>

      <p><%= f.text_field :name , placeholder: 'name', class:'form-field'%></p>

      <p><%= f.text_field :email, placeholder: 'email', class:'form-field'%></p>

      <p><%= f.password_field :password, placeholder: 'password', class:'form-field'%></p>

      <%= f.submit 'Register',class: 'btn btn-sm btn-outline-light form-btn'%>
    <% end %>
  </div>
  <p>To access demo account, go to <%= link_to "Login", new_session_path, class:"btn btn-sm btn-outline-light" %></p>
</div>

<script type="text/javascript">
  clearInterval(window.x)
</script>
