<div class='center'>

  <div class='register'>
    <p class='page-title'>Register</p>


    <%= form_for @account do |f| %>

      <p><%= f.text_field :name , placeholder: 'name', class:'form-field'%></p>

      <p><%= f.text_field :email, placeholder: 'email', class:'form-field'%></p>

      <p><%= f.password_field :password, placeholder: 'password', class:'form-field'%></p>

      <%= f.submit 'Submit'%>
    <% end %>
  </div>
</div>
