<!DOCTYPE html>
<html>
  <head>
    <title>StockPortfolioTtp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to 'MockStocks', root_path, {class: 'navbar-brand mb-0'} %>
          <% if session[:account_id] %>
              <%= link_to 'Portfolio', account_path(current_account), class:'navbar-brand' %>
              <%= link_to 'Transactions', account_transactions_path(current_account), class:'navbar-brand' %>
              <%= link_to 'Log Out', logout_path, class:'navbar-brand'%>
          <% else %>
              <%= link_to 'Sign Up', new_account_path, class:'navbar-brand' %>
              <%= link_to 'Log In', new_session_path, {class: 'navbar-brand'} %>
          <% end %>
        </div>  <!--nav header -->

        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
          </ul>
        </div><!--/.nav-collapse -->

      </div>
    </div>
    <div >
      <% if flash[:error] %>
        <div class="alert alert-warning">
          <%= flash[:error] %>
        </div>
      <% end %>
    </div>
    <div class='container' role='main'>



      <%= yield %>
      </div>
  </body>
</html>
