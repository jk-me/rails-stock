<!DOCTYPE html>
<html>
  <head>
    <title>StockPortfolioTtp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class='nav'>
      <% if session[:account_id] %>
          <%= link_to 'Portfolio', account_path(current_account), class:'navbar-brand' %> |
          <%= link_to 'Transactions', acc_trans_path, class:'navbar-brand' %> |
          <%= link_to 'Log Out', logout_path, class:'navbar-brand'%>
      <% else %>
          <%= link_to 'Sign Up', new_account_path, class:'navbar-brand' %> |
          <%= link_to 'Log In', new_session_path, {class: 'navbar-brand'} %>
      <% end %>
    </div>

    <% if flash[:error] %>
        <div class="alert alert-warning">
          <%= flash[:error] %>
        </div>
      <% end %>

    <%= yield %>
  </body>
</html>
